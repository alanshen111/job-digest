{
    "name": "Job Digest",
    "description": "Extracts tech stack keywords from text",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"]
    }
    ]
}
  